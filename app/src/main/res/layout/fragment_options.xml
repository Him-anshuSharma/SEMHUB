<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".fragments.Options">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_id"
        app:layout_constraintBottom_toBottomOf="@+id/options_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:background="@drawable/shape_roundc"
        android:backgroundTint="#EAE5E5"
        android:padding="5dp"
        android:id="@+id/options_username"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="@string/name"
        app:layout_constraintVertical_bias="0"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <TextView
        android:id="@+id/options_id"
        android:backgroundTint="#EAE5E5"
        android:layout_width="match_parent"
        android:layout_marginVertical="5dp"
        android:layout_height="35dp"
        android:layout_marginHorizontal="55dp"
        android:text="@string/user_id"
        android:padding="5dp"
        android:background="@drawable/shape_roundc"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@id/options_username"
        app:layout_constraintStart_toStartOf="@id/options_username"
        app:layout_constraintTop_toBottomOf="@id/options_username" />

    <ImageView
        android:id="@+id/options_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />




</androidx.constraintlayout.widget.ConstraintLayout>